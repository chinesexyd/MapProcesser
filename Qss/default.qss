/**QStatusBar**/
QStatusBar{
    color:#eacd76;
}
/**QMenu**/
QMenu{
    background-color:#fefdca;
    border:2px solid #a5dee5;
}
QMenu::item{
    background-color:transparent;
    padding:2px 30px;
    margin:0px 0px;
}
QMenu::item::checked{
    background-color:#a5dee5;
}
QMenu::item::selected{
    background-color:#fae3d9;
}
